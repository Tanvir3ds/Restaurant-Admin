<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDataInsertUpdateDelete">

    <RelativeLayout
        android:id="@+id/AdminAddLayout_ID"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/roundcardbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/stamina"
            android:layout_centerHorizontal="true"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:text="Add"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="105dp"
            android:textSize="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/AdminShowLayout_ID"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/roundcardbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/datashow"
            android:layout_centerHorizontal="true"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:text="Show"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="111dp"
            android:textSize="30dp"/>

    </RelativeLayout>


</RelativeLayout>